<?xml version="1.0" encoding="utf-8"?>
<particles>

    <texture>art/textures/particles/blood_dropA.dds</texture>
    <blend mode="over"/>

    <constant name="emissionrate" value="5.0"/>
    <uniform name="lifetime" min="1.1" max="2.2"/>

	<uniform name="position.x" min="-0.2" max="0.2"/>
	<uniform name="position.y" min="0.0" max="1.0"/>
    <uniform name="position.z" min="-0.2" max="0.2"/>
	
	
    <uniform name="velocity.x" min="-0.1" max="0.1"/>
    <uniform name="velocity.y" min="-3.0" max="-7.1"/>
    <uniform name="velocity.z" min="-0.1" max="0.1"/>

    <uniform name="size" min="0.1" max="0.5"/>
	
    <uniform name="color.b" min="9.8" max="10.0"/>
    <copy name="color.g" from="color.b"/>
    <copy name="color.r" from="color.b"/>

</particles>
