<?xml version="1.0" encoding="utf-8"?>
<particles>

    <texture>art/textures/particles/fairy_sparkle_red.dds</texture>
    <blend mode="add"/>

    <constant name="emissionrate" value="15.0"/>
    <uniform name="lifetime" min="0.5" max="27.0"/>

	<uniform name="position.x" min="-25.0" max="25.0"/>
	<uniform name="position.y" min="0.0" max="19.0"/>
    <uniform name="position.z" min="-25.0" max="25.0"/>

    <uniform name="angle" min="-0.3" max="0.3"/>

    <uniform name="velocity.x" min="-0.1" max="0.1"/>
    <uniform name="velocity.y" min="0.0" max="0.1"/>
    <uniform name="velocity.z" min="-0.1" max="0.1"/>
    <uniform name="velocity.angle" min="-0.1" max="0.1"/>

    <uniform name="size" min="0.4" max="5.0"/>
	
    <uniform name="color.b" min="9.8" max="10.0"/>
    <copy name="color.g" from="color.b"/>
    <copy name="color.r" from="color.b"/>

</particles>
