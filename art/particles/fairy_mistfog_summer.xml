<?xml version="1.0" encoding="utf-8"?>
<particles>

    <texture>art/textures/particles/fairy_mist_summer.dds</texture>
    <blend mode="over"/>

    <constant name="emissionrate" value="25.0"/>
    <uniform name="lifetime" min="3.5" max="7.0"/>

	<uniform name="position.x" min="-2.0" max="2.0"/>
	<uniform name="position.y" min="-1.0" max="2.0"/>
    <uniform name="position.z" min="-2.0" max="2.0"/>

    <uniform name="angle" min="-0.3" max="0.3"/>

    <uniform name="velocity.x" min="-0.5" max="0.5"/>
    <uniform name="velocity.y" min="0.1" max="0.5"/>
    <uniform name="velocity.z" min="-0.5" max="0.5"/>
    <uniform name="velocity.angle" min="-0.1" max="0.1"/>

    <uniform name="size" min="3.4" max="7.0"/>
	
    <uniform name="color.b" min="9.8" max="10.0"/>
    <copy name="color.g" from="color.b"/>
    <copy name="color.r" from="color.b"/>

</particles>
