<?xml version="1.0" encoding="utf-8"?>
<particles>

    <texture>art/textures/particles/fairy_leaves_spring.dds</texture>
    <blend mode="over"/>

    <constant name="emissionrate" value="50.0"/>
    <uniform name="lifetime" min="8.5" max="27.0"/>

	<uniform name="position.x" min="-3.0" max="3.0"/>
	<uniform name="position.y" min="-3.0" max="3.0"/>
    <uniform name="position.z" min="-3.0" max="3.0"/>

    <uniform name="angle" min="-7.3" max="7.3"/>

    <uniform name="velocity.x" min="-2.5" max="2.5"/>
    <uniform name="velocity.y" min="-1.5" max="2.1"/>
    <uniform name="velocity.z" min="-2.5" max="2.5"/>
    <uniform name="velocity.angle" min="-3.1" max="3.1"/>

    <uniform name="size" min="0.2" max="0.7"/>
	
    <uniform name="color.b" min="9.8" max="10.0"/>
    <copy name="color.g" from="color.b"/>
    <copy name="color.r" from="color.b"/>
	
	<force y="-0.5"/>

</particles>
