<?xml version="1.0" encoding="utf-8"?>
<particles>

    <texture>art/textures/particles/fairy_leaves_winter.dds</texture>
    <blend mode="over"/>

    <constant name="emissionrate" value="15.0"/>
    <uniform name="lifetime" min="1.0" max="5.0"/>

    <constant name="position.y" value="0.0"/>

    <uniform name="angle" min="-0.5" max="0.5"/>

    <uniform name="velocity.x" min="-1.3" max="1.3"/>
    <uniform name="velocity.y" min="1.0" max="1.5"/>
    <uniform name="velocity.z" min="-1.3" max="1.3"/>
    <uniform name="velocity.angle" min="-0.5" max="15.5"/>

    <uniform name="size" min="0.5" max="1.0"/>

    <uniform name="color.r" min="0.8" max="1.0"/>
    <copy name="color.g" from="color.r"/>
    <copy name="color.b" from="color.r"/>

</particles>
