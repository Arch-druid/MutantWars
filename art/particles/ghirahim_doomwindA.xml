<?xml version="1.0" encoding="utf-8"?>
<particles>

    <texture>art/textures/particles/ghirahim_doomwindA.dds</texture>
    <blend mode="add"/>

    <constant name="emissionrate" value="10.0"/>
    <uniform name="lifetime" min="1.0" max="2.0"/>

	<uniform name="position.y" min="0.0" max="4.0"/>

    <uniform name="angle" min="-0.5" max="0.5"/>

    <uniform name="velocity.x" min="-1.3" max="1.3"/>
    <uniform name="velocity.y" min="1.0" max="2.5"/>
    <uniform name="velocity.z" min="-1.3" max="1.3"/>
    <uniform name="velocity.angle" min="-0.5" max="7.5"/>

    <uniform name="size" min="1.5" max="3.0"/>

    <uniform name="color.r" min="0.8" max="1.0"/>
    <copy name="color.g" from="color.r"/>
    <copy name="color.b" from="color.r"/>
	
    <constant name="size.growthRate" value="3.0"/>

</particles>
