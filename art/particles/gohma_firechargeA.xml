<?xml version="1.0" encoding="utf-8"?>
<particles>

    <texture>art/textures/particles/gohma_fireballA.dds</texture>
    <blend mode="add"/>

    <constant name="emissionrate" value="75.0"/>
    <uniform name="lifetime" min="0.1" max="1.5"/>

	<uniform name="position.x" min="-7.0" max="7.0"/>
	<uniform name="position.y" min="-1.0" max="1.0"/>
    <uniform name="position.z" min="-7.0" max="7.0"/>

    <uniform name="angle" min="-180.3" max="180.3"/>

    <uniform name="velocity.x" min="-10" max="10"/>
    <uniform name="velocity.y" min="-10" max="10"/>
    <uniform name="velocity.z" min="-10" max="10"/>

    <uniform name="size" min="5.4" max="12.0"/>
	
    <uniform name="color.b" min="9.8" max="10.0"/>
    <copy name="color.g" from="color.b"/>
    <copy name="color.r" from="color.b"/>

</particles>
