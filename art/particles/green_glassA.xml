<?xml version="1.0" encoding="utf-8"?>
<particles>

    <texture>art/textures/particles/green_glassA.dds</texture>
    <blend mode="over"/>

    <constant name="emissionrate" value="30.0"/>
    <uniform name="lifetime" min="1.0" max="3.0"/>

    <constant name="position.x" value="0.0"/>
    <constant name="position.y" value="-0.3"/>
    <constant name="position.z" value="0.0"/>

    <uniform name="angle" min="-3.14" max="3.14"/>

    <uniform name="velocity.x" min="-0.5" max="0.5"/>
    <uniform name="velocity.y" min="1.0" max="-1.5"/>
    <uniform name="velocity.z" min="-0.5" max="0.5"/>
    <uniform name="velocity.angle" min="-0.5" max="0.5"/>

    <uniform name="size" min="2.5" max="3.5"/>

    <uniform name="color.r" min="0.3" max="0.7"/>
    <copy name="color.g" from="color.r"/>
    <copy name="color.b" from="color.r"/>

</particles>
