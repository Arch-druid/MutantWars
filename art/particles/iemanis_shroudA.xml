<?xml version="1.0" encoding="utf-8"?>
<particles>

    <texture>art/textures/particles/gohma_shroudA.dds</texture>
    <blend mode="over"/>

    <constant name="emissionrate" value="75.0"/>
    <uniform name="lifetime" min="10.5" max="17.0"/>

	<uniform name="position.x" min="-3.0" max="7.0"/>
	<uniform name="position.y" min="-1.0" max="1.0"/>
    <uniform name="position.z" min="-7.0" max="7.0"/>

    <uniform name="angle" min="-0.3" max="0.3"/>

    <uniform name="velocity.x" min="-1.5" max="1.5"/>
    <uniform name="velocity.y" min="0.1" max="0.5"/>
    <uniform name="velocity.z" min="-0.5" max="1.5"/>
    <uniform name="velocity.angle" min="-0.1" max="0.1"/>

    <uniform name="size" min="3.4" max="7.0"/>
	
    <uniform name="color.b" min="9.8" max="10.0"/>
    <copy name="color.g" from="color.b"/>
    <copy name="color.r" from="color.b"/>
	
	<force y="-0.5"/>

</particles>
