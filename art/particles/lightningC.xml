<?xml version="1.0" encoding="utf-8"?>
<particles>

    <texture>art/textures/particles/lightningC.dds</texture>
    <blend mode="add"/>

    <constant name="emissionrate" value="37.0"/>
    <uniform name="lifetime" min="0.1" max="0.7"/>

	<uniform name="position.x" min="-17.0" max="17.0"/>
	<uniform name="position.y" min="10.0" max="11.0"/>
    <uniform name="position.z" min="-17.0" max="17.0"/>
	
	<uniform name="angle" min="-0.5" max="0.5"/>

    <uniform name="velocity.x" min="-0.0" max="0.1"/>
    <uniform name="velocity.y" min="0.0" max="0.1"/>
    <uniform name="velocity.z" min="-0.0" max="0.1"/>

    <uniform name="size" min="20.5" max="30.25"/>

    <uniform name="color.r" min="0.8" max="1.0"/>
    <copy name="color.g" from="color.r"/>
    <copy name="color.b" from="color.r"/>

</particles>
