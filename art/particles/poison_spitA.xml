<?xml version="1.0" encoding="utf-8"?>
<particles>

    <texture>art/textures/particles/poison_spitA.dds</texture>
    <blend mode="add"/>

    <constant name="emissionrate" value="30.0"/>
    <uniform name="lifetime" min="3.5" max="5.0"/>

	<uniform name="position.x" min="-0.1" max="0.1"/>
	<uniform name="position.y" min="0.1" max="1.0"/>
    <uniform name="position.z" min="-0.1" max="0.1"/>

    <uniform name="angle" min="-0.3" max="0.3"/>

    <uniform name="velocity.x" min="-1.5" max="1.5"/>
    <uniform name="velocity.y" min="0.1" max="1.5"/>
    <uniform name="velocity.z" min="-1.5" max="1.5"/>
    <uniform name="velocity.angle" min="-0.1" max="0.1"/>

    <uniform name="size" min="0.4" max="3.0"/>
	
    <uniform name="color.b" min="9.8" max="10.0"/>
    <copy name="color.g" from="color.b"/>
    <copy name="color.r" from="color.b"/>

</particles>
