<?xml version="1.0" encoding="utf-8"?>
<particles>

    <texture>art/textures/particles/zora_bluefireA.dds</texture>
    <blend mode="over"/>

    <constant name="emissionrate" value="77.0"/>
    <uniform name="lifetime" min="2.0" max="7.0"/>

    <constant name="position.y" value="-0.1"/>
    <uniform name="position.x" min="-3.0" max="3.0"/>
    <uniform name="position.z" min="-3.0" max="3.0"/>
	
    <uniform name="angle" min="-1.5" max="1.5"/>

    <uniform name="velocity.x" min="-0.2" max="0.3"/>
    <uniform name="velocity.y" min="0.3" max="0.4"/>
    <uniform name="velocity.z" min="-0.3" max="0.4"/>
    <uniform name="velocity.angle" min="-0.7" max="0.7"/>

    <uniform name="size" min="2.7" max="3.75"/>

    <uniform name="color.r" min="0.8" max="1.0"/>
    <copy name="color.g" from="color.r"/>
    <copy name="color.b" from="color.r"/>

</particles>
