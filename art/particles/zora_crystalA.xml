<?xml version="1.0" encoding="utf-8"?>
<particles>

    <texture>art/textures/particles/zora_crystalA.dds</texture>
    <blend mode="add"/>

    <constant name="emissionrate" value="2.0"/>
    <uniform name="lifetime" min="4.0" max="7.0"/>
	
    <uniform name="position.y" min="0.0" max="5.0"/>
    <uniform name="position.x" min="-1.5" max="1.5"/>
    <uniform name="position.z" min="-1.5" max="1.5"/>
	
    <uniform name="velocity.x" value="0"/>
    <uniform name="velocity.y" value="0"/>
    <uniform name="velocity.z" value="0"/>

    <uniform name="size" min="0.75" max="3.75"/>

    <uniform name="color.r" min="0.8" max="1.0"/>
    <copy name="color.g" from="color.r"/>
    <copy name="color.b" from="color.r"/>

</particles>
