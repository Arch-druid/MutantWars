<?xml version="1.0" encoding="utf-8"?>
<particles>

    <texture>art/textures/particles/zora_sparksB.dds</texture>
    <blend mode="add"/>

    <constant name="emissionrate" value="77.0"/>
    <uniform name="lifetime" min="0.1" max="0.3"/>

	<uniform name="position.x" min="-1.0" max="1.0"/>
    <uniform name="position.x" min="-2.0" max="2.0"/>
    <uniform name="position.z" min="-3.0" max="3.0"/>
	
    <uniform name="angle" min="-1.5" max="1.5"/>

    <uniform name="velocity.x" min="-1.0" max="1.1"/>
    <uniform name="velocity.y" min="1.0" max="1.1"/>
    <uniform name="velocity.z" min="-1.0" max="1.1"/>
    <uniform name="velocity.angle" min="-1.0" max="1.1"/>

    <uniform name="size" min="4.5" max="7.25"/>

    <uniform name="color.r" min="0.8" max="1.0"/>
    <copy name="color.g" from="color.r"/>
    <copy name="color.b" from="color.r"/>

</particles>
